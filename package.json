{
  "name": "hizzlewp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:node": "webpack --env target=node",
    "build:browser": "webpack --env target=browser",
    "build": "npm run build:node && npm run build:browser",
    "clean": "rimraf packages/*/build-* packages/*/tsconfig.tsbuildinfo",
    "dev": "webpack --watch",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses",
    "packages-update": "wp-scripts packages-update",
    "release:latest": "node scripts/cli.js latest",
    "release:next": "node scripts/cli.js next"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@wordpress/scripts": "^30.13.0",
    "commander": "^12.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "execa": "^8.0.1",
    "lerna": "^8.2.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "semver": "^7.6.0",
    "simple-git": "^3.22.0",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
