{
	"name": "hizzlewp",
	"version": "1.2.0",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build:node": "webpack --env target=node",
		"build:browser": "webpack --env target=browser",
		"build": "npm run build:node && npm run build:browser",
		"clean": "rimraf packages/*/build-* packages/*/tsconfig.tsbuildinfo",
		"dev": "webpack --watch",
		"test": "npm run test --workspaces",
		"lint": "npx eslint . --ext .ts,.tsx --ignore-pattern \"**/build-types/**\"",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"packages-update": "wp-scripts packages-update",
		"docs": "node scripts/doc-generator.js",
		"release": "gh workflow run release.yml -f"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.44.1",
		"@wordpress/docgen": "^2.31.0",
		"@wordpress/eslint-plugin": "^22.17.0",
		"@wordpress/scripts": "^30.24.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"execa": "^9.6.0",
		"lerna": "^8.2.4",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"webpack": "^5.101.3",
		"webpack-cli": "^6.0.1",
		"webpack-node-externals": "^3.0.0"
	}
}
